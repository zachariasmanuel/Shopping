<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product_details_image_view"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <TextView
                android:id="@+id/product_details_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"/>


            <TextView
                android:id="@+id/product_details_price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000"/>

            <TextView
                android:id="@+id/product_details_rating_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating : 3"/>

            <TextView
                android:id="@+id/product_details_description_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ldkhgkjdshgkjdshkjghd jkdfshgkjsdh gdshgkjhfdk gkjdfhgkdfhjkghdsfkjg kdfhg kdfsgdfkjghkjdhgkjdhkjghdfkjg kdf gkdfhgkjhdfs"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="ADD TO CART"/>


        </LinearLayout>


    </ScrollView>

</android.support.constraint.ConstraintLayout>